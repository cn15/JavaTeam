package Test2GD;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
 
	public class SwingControlDemo extends JFrame{  
	JProgressBar jb;  
	int i=0,num=0;  
	  
	SwingControlDemo(){  
	jb=new JProgressBar(0,200);  
	jb.setBounds(40,40,200,30);  
	      
	jb.setValue(0);  
	jb.setStringPainted(true);  
	      
	add(jb);  
	setSize(400,400);  
	setLayout(null);  
	}  
	  
	public void iterate(){  
	while(i<=2000){  
	  jb.setValue(i);  
	  i=i+20;  
	  try{Thread.sleep(150);}catch(Exception e){}  
	}  
	}  
	public static void main(String[] args) {  
	    SwingControlDemo m=new SwingControlDemo();  
	    m.setVisible(true);  
	    m.iterate();  
	}  
	}  